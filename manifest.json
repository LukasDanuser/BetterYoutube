{
    "name": "BetterYoutube",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Better Youtube",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "main.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_title": "BetterYoutube",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ]
}