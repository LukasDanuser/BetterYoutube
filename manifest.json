{
    "name": "BetterYoutube",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "main.js",
                "titleTranslation.js"
            ]
        }
    ],
    "action": {
        "default_title": "BetterYoutube",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "storage"
    ]
}